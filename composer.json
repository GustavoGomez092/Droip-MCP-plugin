{
    "name": "droip/claude-bridge",
    "description": "MCP server bridge for Claude Code to manage Droip symbols",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8.1",
        "logiscape/mcp-sdk-php": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "DroipBridge\\": "mcp-server/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DroipBridge\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage"
    }
}
